<%- include("../partials/header.ejs") %>
<h1 style="padding-top: 20px; margin-bottom: 40px">New Post</h1>
<div class="container-form">
  <form action="/submit" method="post" id="postForm">
    <div class="form">
        <div class="input-view">
          <label for="title">Title</label>
          <input type="text" name="title" required />
        </div>
    
        <div class="input-view">
          <label for="author">Author</label>
          <input type="text" name="author" required />
        </div class="input-view">
    
        <div class="input-view">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="2" required></textarea>
        </div>
    </div>

    <input type="hidden" name="date" id="dateInput"/>
    <input type="hidden" name="id" id="id-post-create">

    <button type="submit" class="btn btn-primary btn-submit">Create</button>

  </form>
</div>
<%- include("../partials/footer.ejs") %>
