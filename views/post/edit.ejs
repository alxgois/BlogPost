<%- include("../partials/header.ejs") %>
<h1 style="padding-top: 20px; margin-bottom: 40px">Edit Post</h1>
<div class="container-form">
  <form action="/post/update/<%= id %>" method="post" id="postForm">
    <div class="form">
        <div class="input-view">
          <label for="title">Title</label>
          <input type="text" name="title" required value="<%= title %>" />
        </div>
    
        <div class="input-view">
          <label for="author">Author</label>
          <input type="text" name="author" required value="<%= author %>" />
        </div class="input-view">
    
        <div class="input-view">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="2" required ><%= description %></textarea>
        </div>
    </div>

    <input type="hidden" name="date" value="<%= date %>"/>
    <input type="hidden" name="id" value="<%= id %>" />
    <button type="submit" value="Save" class="btn btn-primary btn-submit">Save</button>

  </form>
</div>
<%- include("../partials/footer.ejs") %>
